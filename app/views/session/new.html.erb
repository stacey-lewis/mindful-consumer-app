
<h2>Login</h2>

<% if flash[:error].present? %>
<br>
<strong>
  <%= flash[:error] %>
</strong>
<br><br>
<% end %>

<%= form_with url: login_path, local: true do |f| %>

<%= f.label :email_address %><br>
<%= f.text_field :email_address %><br>
<br>

<%= f.label :password %><br>
<%= f.password_field :password %><br>
<br>
<%= f.submit "Login" %>

<% end %>
